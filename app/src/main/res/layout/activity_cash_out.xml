<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/root"
    android:background="@color/back_ground"
    android:layout_height="match_parent"
    tools:context=".CashOutActivity">

    <androidx.cardview.widget.CardView
        android:background="@color/back_ground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@color/back_ground"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <ImageView

                android:layout_width="49dp"
                android:layout_height="49dp"
                android:src="@drawable/ic_left_sort_white"
                android:padding="10dp"
                android:id="@+id/back"
                android:tint="@color/day_night_text_color"/>

            <LinearLayout
                android:background="@color/back_ground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <customviews.typefacesviews.TypeFaceGoogleBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SOLICITAÇÃO DE SAQUE"
                    android:textColor="@color/day_night_text_color"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>





    <LinearLayout
        android:background="@color/back_ground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:background="@color/back_ground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:background="@color/back_ground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <customviews.typefacesviews.TypeFaceGoogle
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Valor do saque"
                    android:textColor="@color/day_night_text_color"
                    android:textSize="16dp" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <customviews.typefacesviews.TypeFaceGoogle
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="INR"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/day_night_text_color"
                        android:visibility="gone"
                        android:textSize="16dp" />


                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <EditText
                                android:id="@+id/ed_enter_money"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@null"
                                android:hint="Digite o valor aqui. . ."
                                android:inputType="numberDecimal"
                                android:textColor="@color/day_night_text_color"
                                android:textColorHint="@color/day_night_text_color" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/icons_8_muted_grey" />


                    </LinearLayout>




                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/txt_add_money"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@color/red_text"
            android:elevation="5dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Enviar"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </LinearLayout>
    <LinearLayout
        android:background="@color/back_ground"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <com.sam.placer.PlaceHolderView
            android:background="@color/back_ground"
            android:id="@+id/placeholder"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
        </com.sam.placer.PlaceHolderView>


    </LinearLayout>







</LinearLayout>