<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/back_ground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".NewEarningDriver">

    <ScrollView
        android:background="@color/back_ground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/back_ground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                app:theme="@style/ThemeOverlay.AppCompat.Dark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    app:cardBackgroundColor="@color/pure_white"
                    app:cardElevation="3dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp">
                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/leftClick"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_keyboard_arrow_left_black_24dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="45dp"
                            android:layout_marginRight="45dp">

                            <customviews.typefacesviews.TypeFaceGoogleBold
                                android:id="@+id/selectedDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/fui_bgTwitter"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/rightClick"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />
                        </LinearLayout>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardElevation="3dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="45dp"
                            android:layout_marginRight="45dp">
                            <customviews.typefacesviews.TypeFaceGoogleBold
                                android:id="@+id/tvTotalEarnings_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/white"                            android:textSize="18sp"
                                android:textStyle="bold" />
                            <customviews.typefacesviews.TypeFaceGoogleBold
                                android:id="@+id/tvTotalEarnings"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/white"                            android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <com.sam.placer.PlaceHolderView
                    android:id="@+id/placeHoder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/l_triphistory"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/view1"
                    android:background="@color/day_night_text_color"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">
                </View>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="bottom">
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Highlighted Text"
                            android:id="@+id/highlighted_text1"
                            android:textColor="@color/day_night_text_color"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/highlighted_small_text1"
                            android:visibility="gone"
                            android:textColor="@color/day_night_text_color"
                            android:text="Small text"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$ 445.90"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:id="@+id/value_text1"
                        android:textColor="@color/day_night_text_color"/>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout

                android:visibility="visible"
                android:layout_marginTop="10dp"
                android:id="@+id/l1_trip"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/lview1"
                    android:background="@color/day_night_text_color"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">
                </View>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="bottom">
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/day_night_text_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Highlighted Text"
                            android:id="@+id/trip_history"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="39dp"
                        android:layout_height="39dp"
                        android:src="@drawable/ic_right_sort"
                        android:tint="@color/day_night_text_color"
                        android:id="@+id/trip_details"
                        android:padding="10dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:layout_marginTop="10dp"
                android:id="@+id/l1_wallet"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/lview1"
                    android:background="@color/day_night_text_color"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">
                </View>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="bottom">
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textColor="@color/day_night_text_color"
                            android:id="@+id/walletAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WALLET BANANCE"
                            android:layout_gravity="center"
                            android:textStyle="bold"/>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/l1_cash"
                        android:visibility="gone"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:visibility="visible"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:gravity="bottom">
                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Highlighted Text"
                                    android:id="@+id/cash"
                                    android:textColor="@color/day_night_text_color"
                                    android:textStyle="bold"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$ 445.90"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:id="@+id/cash_value"
                                android:textColor="@color/day_night_text_color"/>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/l1_wallet_balance"
                        android:visibility="gone"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:gravity="bottom">
                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Highlighted Text"
                                    android:id="@+id/wallet"
                                    android:textColor="@color/day_night_text_color"
                                    android:textStyle="bold"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$ 445.90"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:id="@+id/wallet_amount"
                                android:textColor="@color/day_night_text_color"/>


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout

                android:layout_marginTop="10dp"
                android:id="@+id/l1_w_amnt"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/lview1"
                    android:background="@color/day_night_text_color"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">
                </View>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="bottom">



                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:visibility="visible"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:gravity="bottom">
                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">
                                <TextView
                                    android:textColor="@color/day_night_text_color"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Highlighted Text"
                                    android:id="@+id/current_wallet_balance"
                                    android:textStyle="bold"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$ 445.90"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:id="@+id/curent_wall_amt"
                                android:textColor="@color/day_night_text_color"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <com.tkx.driver.typeface.TextTypeSemiBold
                android:layout_width="match_parent"
                android:visibility="visible"
                android:layout_margin="30dp"
                android:id="@+id/cashout"
                android:background="@drawable/rectangle_btn"
                android:text="@string/CASH_OUT"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="28dp"
                android:layout_height="60dp">

            </com.tkx.driver.typeface.TextTypeSemiBold>






        </LinearLayout>

    </ScrollView>

</LinearLayout>