<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e4e4"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorHeader"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_back_signup"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_left_sort_white"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <customviews.typefacesviews.TypeFaceGoogleBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/driver_bg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"></RelativeLayout>
            <!--> android:background="#34495e"></RelativeLayout> -->


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="#ffffff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="110dp"
                            android:layout_height="110dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/driver_image"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center|top"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/dummy_pic"
                                geekui:civ_border_color="@color/icons_8_muted_grey"
                                geekui:civ_border_width="2dp" />


                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="bottom|right"
                                android:layout_marginRight="2dp"
                                android:layout_marginBottom="2dp"
                                geekui:civ_border_color="@color/icons_8_muted_grey"
                                geekui:civ_border_width="2dp" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="bottom|right"
                                android:layout_marginRight="7dp"
                                android:layout_marginBottom="7dp"
                                android:src="@drawable/ic_camera"
                                android:tint="@color/icons_8_muted_grey" />
                        </FrameLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"
                            android:textColorHint="@color/icons_8_muted_grey"
                            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                            <EditText
                                android:id="@+id/edt_username_signup"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:background="@android:color/transparent"
                                android:hint="@string/REGISTER_ACTIVITY__enter_name"
                                android:inputType="none|textNoSuggestions|textCapWords"
                                android:singleLine="true"
                                android:textSize="15dp" />
                        </com.google.android.material.textfield.TextInputLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="20dp"
                            android:background="@color/icons_8_muted_grey" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"
                            android:textColorHint="@color/icons_8_muted_grey"
                            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                            <EditText
                                android:id="@+id/edt_lastname_signup"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:background="@android:color/transparent"
                                android:hint="@string/enter_last_name"
                                android:inputType="none|textCapWords"
                                android:singleLine="true"
                                android:textSize="15dp" />
                        </com.google.android.material.textfield.TextInputLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="20dp"
                            android:background="@color/icons_8_muted_grey" />


                        <LinearLayout
                            android:id="@+id/llEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="15dp"
                                android:textColorHint="@color/icons_8_muted_grey"
                                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                                <EditText
                                    android:id="@+id/edt_email_signup"
                                    android:layout_width="match_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:background="@android:color/transparent"
                                    android:inputType="textEmailAddress"
                                    android:singleLine="true"
                                    android:textSize="15dp" />
                            </com.google.android.material.textfield.TextInputLayout>


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="20dp"
                                android:background="@color/icons_8_muted_grey" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/phone_layout"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone">


                            <com.hbb20.CountryCodePicker
                                android:id="@+id/country_code1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp"
                                app:ccp_showNameCode="false"
                                app:ccp_defaultLanguage="SPANISH"/>



                            <customviews.typefacesviews.TypeFaceGoogle
                                android:id="@+id/phone_code"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="10dp"
                                android:drawableLeft="@drawable/ic_sort_down_vector"
                                android:gravity="center"
                                android:paddingTop="10dp"
                                android:text=""
                                android:visibility="gone"
                                android:textColor="@color/pure_black" />


                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="fill_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:textColorHint="@color/icons_8_muted_grey"
                                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                                <EditText
                                    android:id="@+id/edt_phone"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent"
                                    android:inputType="phone"
                                    android:singleLine="true"
                                    android:textColor="@color/pure_black"
                                    android:textSize="15dp" />
                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>

                        <customviews.typefacesviews.TypeFaceGoogle
                            android:id="@+id/txt_phone_signup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="20dp"
                            android:background="@android:color/transparent"
                            android:hint="@string/REGISTER_ACTIVITY__enter_mobile"
                            android:textSize="15dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="20dp"
                            android:background="@color/icons_8_muted_grey" />

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:id="@+id/address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_marginTop="10dp"
                                android:paddingRight="10dp"
                                android:layout_height="wrap_content"
                                android:background="#dfdfdf"
                                android:orientation="horizontal"
                                android:gravity="center">
                                <customviews.typefacesviews.TypeFaceGoogleBold
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:gravity="center|left"
                                    android:text="@string/Address_Details"
                                    android:textColor="#333333"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="22dp"
                                    android:textStyle="bold">

                                </customviews.typefacesviews.TypeFaceGoogleBold>


                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:tint="@color/icons_8_muted_blue"/>
                            </LinearLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="15dp"
                                android:textColorHint="@color/icons_8_muted_grey"
                                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                                <EditText
                                    android:id="@+id/street_number"
                                    android:layout_width="match_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="30dp"
                                    android:layout_marginRight="20dp"
                                    android:background="@android:color/transparent"
                                    android:hint="@string/Street_Name"
                                    android:inputType="textCapWords"
                                    android:singleLine="true"
                                    android:textSize="15dp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="20dp"
                                android:background="@color/icons_8_muted_grey" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="15dp"
                                android:textColorHint="@color/icons_8_muted_grey"
                                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                                <EditText
                                    android:id="@+id/House_no"
                                    android:layout_width="match_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="30dp"
                                    android:layout_marginRight="20dp"
                                    android:background="@android:color/transparent"
                                    android:hint="@string/House_Number"
                                    android:inputType="textNoSuggestions|text"
                                    android:singleLine="true"
                                    android:textSize="15dp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="20dp"
                                android:background="@color/icons_8_muted_grey" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="15dp"
                                android:textColorHint="@color/icons_8_muted_grey"
                                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                                <EditText
                                    android:id="@+id/city_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="30dp"
                                    android:layout_marginRight="20dp"
                                    android:background="@android:color/transparent"
                                    android:hint="@string/City_Name"
                                    android:inputType="textCapWords"
                                    android:singleLine="true"
                                    android:textSize="15dp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="20dp"
                                android:background="@color/icons_8_muted_grey" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="45dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="15dp"
                                        android:textColorHint="@color/icons_8_muted_grey"
                                        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                                        <EditText
                                            android:id="@+id/statecode"
                                            android:layout_width="match_parent"
                                            android:layout_height="fill_parent"
                                            android:layout_marginLeft="20dp"
                                            android:layout_marginTop="30dp"
                                            android:layout_marginRight="20dp"
                                            android:background="@android:color/transparent"
                                            android:maxLength="2"
                                            android:hint="@string/State_code"                                            
                                            android:inputType="textCapCharacters"
                                            android:singleLine="true"
                                            android:textSize="15dp" />
                                    </com.google.android.material.textfield.TextInputLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="45dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="15dp"
                                        android:textColorHint="@color/icons_8_muted_grey"
                                        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                                        <EditText
                                            android:id="@+id/postalcode"
                                            android:layout_width="match_parent"
                                            android:layout_height="fill_parent"
                                            android:layout_marginLeft="20dp"
                                            android:layout_marginTop="30dp"
                                            android:layout_marginRight="20dp"
                                            android:background="@android:color/transparent"
                                            android:hint="@string/Enter_Postal_Code"
                                            android:maxLength="8"
                                            android:inputType="number"
                                            android:singleLine="true"
                                            android:textSize="15dp" />
                                    </com.google.android.material.textfield.TextInputLayout>

                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="20dp"
                            android:background="@color/icons_8_muted_grey" />

                        <com.google.android.material.textfield.TextInputLayout
                            app:endIconMode="password_toggle"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"
                            android:textColorHint="@color/icons_8_muted_grey"
                            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                            <EditText
                                android:id="@+id/edt_pass_signup"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="30dp"
                                android:layout_marginRight="20dp"
                                android:background="@android:color/transparent"
                                android:hint="@string/REGISTER_ACTIVITY__enter_password"
                                android:inputType="textWebPassword"
                                android:singleLine="true"
                                android:textSize="15dp" />
                        </com.google.android.material.textfield.TextInputLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="20dp"
                            android:background="@color/icons_8_muted_grey" />

                        <com.google.android.material.textfield.TextInputLayout
                            app:endIconMode="password_toggle"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"
                            android:textColorHint="@color/icons_8_muted_grey"
                            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                            <EditText                                
                                android:id="@+id/edt__confpass_signup"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="30dp"
                                android:layout_marginRight="20dp"
                                android:background="@android:color/transparent"
                                android:hint="@string/REGISTER_ACTIVITY__enter_conf_password"
                                android:inputType="textPassword"
                                android:singleLine="true"
                                android:textSize="15dp" />
                        </com.google.android.material.textfield.TextInputLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="20dp"
                            android:background="@color/icons_8_muted_grey" />

                        <LinearLayout
                            android:id="@+id/llCpfNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="15dp"
                                android:textColorHint="@color/icons_8_muted_grey"
                                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                                <EditText
                                    android:id="@+id/edtCpfNumber"
                                    android:layout_width="match_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:background="@android:color/transparent"
                                    android:hint="@string/enter_cpf_number"
                                    android:inputType="number"
                                    android:singleLine="true"
                                    android:textSize="15dp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="20dp"
                                android:background="@color/icons_8_muted_grey" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/genderLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="gone">


                            <customviews.typefacesviews.TypeFaceGoogle
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="20dp"
                                android:text="@string/gender"
                                android:textColor="@color/pure_black"
                                android:textSize="15dp" />

                            <RadioGroup
                                android:id="@+id/radio_group"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_above="@+id/view_below"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/radio1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/male" />

                                <RadioButton
                                    android:id="@+id/radio2"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/female" />
                            </RadioGroup>
                        </LinearLayout>

                        <View
                            android:id="@+id/viewGender"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:background="@color/icons_8_muted_grey" />

                        <LinearLayout
                            android:id="@+id/pink_smoke"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:id="@+id/llShowSmokerLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <customviews.typefacesviews.TypeFaceGoogle
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="20dp"
                                    android:text="@string/smoke"
                                    android:textColor="@color/pure_black"
                                    android:textSize="15dp" />

                                <RadioGroup
                                    android:id="@+id/smoker_radio_group"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_above="@+id/view_below"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:id="@+id/smk_radio"
